{% extends 'layout.jinja' %}

{% block content %}

<h1>All Posts</h1>

<table class="table">
<tbody>
{% for post in posts %}
<tr>
<td>{{ post.id }}</td>
<td>{{ post.title }}</td>
<td>{{ post.content }}</td>
</tr>
{% endfor %}
</tbody>
</table>
<hr />
<h2>Add New Post</h2>
<form method="POST" action="/posts">
<div class="mb-3">
    <label for="id" class="form-label">ID</label>
    <input type="text" class="form-control" id="id" name="id" size="3">
  </div>

  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="title">
  </div>
  <div class="mb-3">
    <label for="content" class="form-label">Content</label>
    <textarea class="form-control" id="content" name="copy_text"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
{% endblock %}